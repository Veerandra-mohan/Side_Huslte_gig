{
  "compilerOptions": {
    "target": "ES2020",                // Compile to modern JavaScript
    "module": "CommonJS",             // Use standard Node.js modules
    "rootDir": "./backend",           // Where your source code is
    "outDir": "./dist",               // Where the compiled JavaScript will go
    "strict": true,                   // Enable all strict type-checking
    "esModuleInterop": true,          // Allows better compatibility between modules
    "skipLibCheck": true,             // Speeds up compilation
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true        // Allows importing .json files
  },
  "include": ["backend/**/*"],       // Tells the compiler to only look inside 'backend'
  "exclude": ["node_modules"]         // Ignore the node_modules folder
}
